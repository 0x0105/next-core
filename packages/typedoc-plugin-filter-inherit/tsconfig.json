{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist/",
    "**/__mocks__/",
    "package.json"
  ]
}
