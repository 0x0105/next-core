{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "assignees": ["weareoutman"],
  "ignorePresets": [":ignoreModulesAndTests"],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    },
    {
      "packagePatterns": [
        "^@bricks/",
        "^@libs/",
        "^@micro-apps/",
        "^@sdk/",
        "^@templates/"
      ],
      "enabled": false
    },
    {
      "packagePatterns": ["^@easyops/"],
      "automerge": false,
      "groupName": "next-core packages",
      "postUpgradeTasks": {
        "commands": [
          "yarn renew",
          "yarn extract",
          "./node_modules/.bin/prettier --write package.json"
        ],
        "fileFilters": ["**/*", ".gitlab/**/*"]
      }
    }
  ]
}
