{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base"],
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "semanticCommits": true,
  "commitMessagePrefix": "chore(deps):",
  "assignees": ["weareoutman"],
  "ignorePresets": [":ignoreModulesAndTests"],
  "baseBranches": ["next"],
  "packageRules": [
    {
      "packagePatterns": [
        "^@bricks/",
        "^@libs/",
        "^@micro-apps/",
        "^@sdk/",
        "^@next-dll/",
        "^@next-core/"
      ],
      "automerge": false
    },
    {
      "packageNames": ["size-limit"],
      "packagePatterns": ["^@size-limit/"],
      "groupName": "size-limit packages"
    },
    {
      "packageNames": ["copy-webpack-plugin"],
      "major": { "enabled": false }
    },
    {
      "packagePatterns": ["^@svgr/"],
      "groupName": "svgr packages"
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "postUpgradeTasks": {
    "commands": ["yarn-deduplicate yarn.lock", "yarn"],
    "fileFilters": ["yarn.lock"]
  }
}
