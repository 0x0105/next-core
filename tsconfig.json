{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "dist/",
    "**/__mocks__/"
  ]
}
